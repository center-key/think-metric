{
   "name": "think-metric",
   "version": "1.0.0",
   "description": "ðŸ‡ºðŸ‡¸ Americans for Metrication",
   "license": "CC0-1.0",
   "type": "module",
   "repository": {
      "type": "git",
      "url": "git+https://github.com/center-key/think-metric.git"
   },
   "homepage": "https://think-metric.org",
   "bugs": "https://github.com/center-key/think-metric/issues",
   "docs": "https://github.com/center-key/think-metric#readme",
   "author": "Center Key (https://centerkey.com)",
   "keywords": [
      "metric",
      "metrication",
      "units-of-measure"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "varstmt": true,
      "browser": true,
      "node": true,
      "globals": {
         "dna": false
      }
   },
   "replacerConfig": {
      "macros": {
         "article-link-html": "<li><a href={[webRoot]}/article/{{file.folder}}>{{articleTitle}}</a></li>",
         "timestamp-html": "<time datetime={{file.timestamp}}>{{file.modified}}</time>"
      }
   },
   "runScriptsConfig": {
      "clean": [
         "rimraf build docs"
      ],
      "generated": [
         "copy-file node_modules/web-ignition/dist/utility-box.less --folder src/website/css/static --platform-eol",
         "replacer src/templates/table-of-products.html --content={{macro:timestamp-html}} src/templates/generated --concat=products-timestamp.html",
         "replacer src/website/article --ext=.html --content={{macro:article-link-html}} src/templates/generated --find=[webRoot] --replacement={webRoot} --title-sort --concat=articles.html"
      ],
      "lint": [
         "jshint tools src"
      ],
      "build": [
         "copy-folder src/website                   build --ext=.png,.jpg,.svg,.js",
         "lessc       src/website/style.less        build/style.css",
         "replacer    src/website   --ext=.html     build",
         "replacer    src/redirects --ext=.html     build",
         "copy-file   build/article-list/index.html build/article --folder"
      ],
      "publish": [
         "rev-web-assets build                           docs --meta-content-base=https://think-metric.org",
         "replacer --virtual-input . --rename=robots.txt docs --content=#{{space}}Allow{{space}}bots",
         "replacer --virtual-input . --rename=CNAME      docs --content=think-metric.org",
         "copy-file src/website/assets/bookmark-icon.png docs/graphics --folder"
      ],
      "interactive": [
         "chokidar src --command 'run-scripts lint build publish'",
         "browser-sync . --startPath docs --files docs"
      ]
   },
   "scripts": {
      "pretest": "run-scripts clean generated lint build publish",
      "test": "mocha spec",
      "validate-html": "npm test && html-validator --default-rules docs",
      "interactive": "npm test && run-scripts interactive --parallel",
      "i": "npm run interactive"
   },
   "dependencies": {
      "@fortawesome/fontawesome-free": "~7.1",
      "assert-deep-strict-equal": "~1.2",
      "browser-sync": "~3.0",
      "chokidar-cli": "~3.0",
      "copy-file-util": "~1.3",
      "copy-folder-util": "~1.2",
      "dna-engine": "~3.3",
      "jshint": "~2.13",
      "less": "~4.4",
      "mocha": "~11.7",
      "replacer-util": "~1.5",
      "rev-web-assets": "~1.5",
      "rimraf": "~6.1",
      "run-scripts-util": "~1.3",
      "w3c-html-validator": "~2.0",
      "web-ignition": "~2.4"
   }
}
